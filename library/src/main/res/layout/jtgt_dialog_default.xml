<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:gravity="center"
	android:layout_gravity="center">

	<LinearLayout
		android:layout_height="wrap_content"
		android:layout_width="match_parent"
		android:orientation="vertical"
		android:id="@+id/main"
		android:gravity="center"
		android:paddingLeft="25dp"
		android:paddingRight="25dp"
		android:paddingTop="15dp"
		android:paddingBottom="15dp"
		android:background="@drawable/jtgt_dialog_background">

		<ImageView
			android:layout_height="50dp"
			android:layout_width="50dp"
			android:src="@android:drawable/ic_delete"
			android:id="@+id/icon"
			android:scaleType="fitXY"/>

		<LinearLayout
			android:layout_height="wrap_content"
			android:layout_width="match_parent"
			android:orientation="horizontal"
			android:gravity="center"
			android:layout_marginTop="10dp">

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textAppearance="?android:attr/textAppearanceMedium"
				android:text="Title"
				android:textColor="#FFFFFF"
				android:textStyle="bold"
				android:id="@+id/title"
				android:textSize="20sp"/>

		</LinearLayout>

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textAppearance="?android:attr/textAppearanceSmall"
			android:text="Message"
			android:id="@+id/subtitle"
			android:textSize="15sp"
			android:textStyle="bold|italic"
			android:textColor="#F2ED11"/>

		<LinearLayout
			android:layout_height="wrap_content"
			android:layout_width="match_parent"
			android:orientation="horizontal"
			android:gravity="center"
			android:layout_marginTop="15dp"
			android:id="@+id/lin">

			<Button
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:text="Cancel"
				android:id="@+id/cancel"
				android:textColor="#28F800"
				android:textSize="14sp"
				android:typeface="serif"
				android:textStyle="bold"
				android:paddingLeft="25dp"
				android:paddingRight="25dp"
				android:background="@drawable/jtgt_dialog_button"
				android:foreground="@drawable/jtgt_dialog_button_foreground"
				android:clickable="true"
				android:paddingTop="5dp"
				android:paddingBottom="5dp"/>

			<LinearLayout
				android:layout_height="match_parent"
				android:layout_width="16dp"
				android:orientation="horizontal"
				android:id="@+id/ButMargin"/>

			<Button
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:text="Done"
				android:id="@+id/ok"
				android:textSize="14sp"
				android:typeface="serif"
				android:textStyle="bold"
				android:textColor="#28F800"
				android:paddingLeft="25dp"
				android:paddingRight="25dp"
				android:background="@drawable/jtgt_dialog_button"
				android:foreground="@drawable/jtgt_dialog_button_foreground"
				android:clickable="true"
				android:paddingTop="5dp"
				android:paddingBottom="5dp"/>

		</LinearLayout>

	</LinearLayout>

</LinearLayout>

